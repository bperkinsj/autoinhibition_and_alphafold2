# Will probably have to reconfigure this.
rule calculate_rmsds:
    input:
        'data/proteins_pdb_both_60.tsv'

    output:
        'data/trim_values.tsv',
        'data/rmsds.tsv'

    script:
        'scripts/calculate_rmsd.py'

rule rmsd_plot:
    input:
        'data/rmsds.tsv'

    output:
        'data/figures/rmsd_plot.png'

    script:
        'scripts/rmsd_plot.py'